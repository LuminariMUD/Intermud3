# I3 Gateway Environment Configuration
# Copy this file to .env and update with your values

# MUD Configuration
MUD_NAME=YourMUD
MUD_PORT=4000
MUD_ADMIN_EMAIL=admin@yourmud.com
MUD_TYPE=LP
MUD_STATUS=open

# I3 Router Configuration
I3_ROUTER_HOST=204.209.44.3
I3_ROUTER_PORT=8080
I3_ROUTER_PASSWORD=0

# Fallback Router (optional)
I3_FALLBACK_ROUTER_HOST=backup.router.i3
I3_FALLBACK_ROUTER_PORT=8080

# Gateway Configuration
GATEWAY_HOST=localhost
GATEWAY_PORT=4001
GATEWAY_MAX_PACKET_SIZE=65536
GATEWAY_TIMEOUT=30
GATEWAY_RETRY_ATTEMPTS=3
GATEWAY_RETRY_DELAY=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/i3-gateway.log

# Security
I3_GATEWAY_SECRET=change-this-secret-key
ENABLE_AUTH=true

# Performance Tuning
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=300
KEEPALIVE_INTERVAL=60

# Feature Flags
ENABLE_TELL=true
ENABLE_CHANNEL=true
ENABLE_WHO=true
ENABLE_FINGER=true
ENABLE_LOCATE=true
ENABLE_OOB_MAIL=false
ENABLE_OOB_NEWS=false
ENABLE_OOB_FILE=false

# Development Settings
DEBUG=false
RELOAD=false
PROFILE=false