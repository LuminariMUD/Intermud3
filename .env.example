# Intermud3 Gateway Environment Variables
# Copy this file to .env and configure for your environment

# MUD Configuration
MUD_NAME=YourMUD
MUD_PORT=4000
MUD_ADMIN_EMAIL=admin@yourmud.com

# I3 Router Configuration
# Default: *i3 router at 204.209.44.3:8080
I3_ROUTER_HOST=204.209.44.3
I3_ROUTER_PORT=8080

# Fallback router (optional)
I3_ROUTER_FALLBACK_HOST=
I3_ROUTER_FALLBACK_PORT=

# Gateway API Configuration
API_WS_HOST=0.0.0.0
API_WS_PORT=8080
API_TCP_HOST=0.0.0.0
API_TCP_PORT=8081

# Security
I3_GATEWAY_SECRET=your-secret-key-here
API_KEY_YOURMUD=your-api-key-here

# Logging
LOG_LEVEL=INFO

# Performance Tuning
MAX_CONNECTIONS=1000
MAX_QUEUE_SIZE=10000
RECONNECT_DELAY=30
HEARTBEAT_INTERVAL=60

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Monitoring (optional)
GRAFANA_PASSWORD=secure-password-here
PROMETHEUS_RETENTION=15d

# Development Settings (override in .env.local)
DEBUG=false
RELOAD=false